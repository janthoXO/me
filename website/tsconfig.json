{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@spartan-ng/helm/button": [
        "./libs/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/helm/icon": [
        "./libs/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/helm/card": [
        "./libs/ui/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/helm/avatar": [
        "./libs/ui/ui-avatar-helm/src/index.ts"
      ],
      "@spartan-ng/helm/badge": [
        "./libs/ui/ui-badge-helm/src/index.ts"
      ],
      "@spartan-ng/helm/hover-card": [
        "./libs/ui/ui-hover-card-helm/src/index.ts"
      ],
      "@spartan-ng/helm/label": [
        "./libs/ui/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/helm/separator": [
        "./libs/ui/ui-separator-helm/src/index.ts"
      ],
      "@spartan-ng/helm/tooltip": [
        "./libs/ui/ui-tooltip-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
